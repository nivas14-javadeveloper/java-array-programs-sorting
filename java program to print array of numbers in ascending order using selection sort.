import java.util.Arrays;
class Main 
{
    public static void main(String[]args)
    {
        int []a={3,6,2,1,7,8};
        for(int i=0;i<=a.length-1;i++)
        {
            int j=i+1;
           while(j<a.length)
           {
               if(a[j]<a[i])
               {
                int temp=a[j];
                a[j]=a[i];
                a[i]=temp;
               }
               j++;
           }
        }
        System.out.println(Arrays.toString(a));
    }
}
